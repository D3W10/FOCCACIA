<div class="w-100 hidden flex-col fixed bottom-6 right-6 p-4 bg-stone-200 opacity-0 rounded-xl shadow ring-1 ring-stone-900/10 overflow-hidden translate-y-10 scale-80 transition duration-300 ease-in-out [--sonner-time-bar:0] {{class}}">
    <div class="w-[var(--sonner-time-bar)] h-1 absolute top-0 left-0 right-0 bg-stone-900/20 transition-[width] duration-[5s] ease-in-out"></div>
    <button class="absolute top-4 right-4 cursor-pointer" onclick="closeSonner(this.closest('div'))">
        {{> dismiss12 class="w-5 h-5 text-stone-500 hover:text-stone-700 transition-colors duration-200"}}
    </button>
    {{> @partial-block }}
    <script>
        const sonner = document.currentScript.parentElement;
        setTimeout(() => openSonner(sonner), 500);
    </script>
</div>