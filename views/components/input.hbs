{{#if (eq type "text")}}
    <input type="text" name="{{name}}" placeholder="{{placeholder}}" value="{{value}}" {{required}} class="w-full px-2 py-1.5 bg-stone-100 border-2 border-black/15 focus-within:border-orange-600 rounded-lg shadow-sm ring-0 focus-within:ring-4 ring-orange-600/20 focus-within:outline-0 transition duration-200 {{class}}">
{{else if (eq type "area")}}
    <textarea name="{{name}}" placeholder="{{placeholder}}" {{required}} class="w-full px-2 py-1.5 bg-stone-100 border-2 border-black/15 focus-within:border-orange-600 rounded-lg shadow-sm ring-0 focus-within:ring-4 ring-orange-600/20 focus-within:outline-0 transition duration-200 {{class}}">{{value}}</textarea>
{{/if}}