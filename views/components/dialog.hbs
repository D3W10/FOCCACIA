<dialog id="{{id}}">
    <div class="max-w-150 p-6 bg-stone-100 rounded-2xl shadow ring-1 ring-stone-900/10">
        <h3 class="text-2xl font-bold">{{title}}</h3>
        <p class="mt-2 text-stone-700 font-medium">{{text}}</p>
        <div class="mt-6 flex justify-end space-x-4">
            {{#> button secondary=true onclick="closeDialog(this.closest('dialog'))"}}No{{/button}}
            {{#> button onclick=(concat "closeDialog(this.closest('dialog')," callback ")")}}Yes{{/button}}
        </div>
    </div>
</dialog>