<div class="w-100 p-10 flex flex-col justify-center items-center border border-stone-600/30 rounded-2xl shadow-md shadow-stone-600/10">
    {{> ball size="size-12"}}
    <h1 class="mt-4 text-3xl font-extrabold">FOCCACIA</h1>
    <div class="w-full mt-10">
        <p class="mb-1.5 font-bold">Username</p>
        <input type="text" placeholder="Required" class="w-full px-2 py-1.5 bg-stone-100 border-2 border-black/15 focus-within:border-orange-600 rounded-lg shadow-sm ring-0 focus-within:ring-4 ring-orange-600/20 focus-within:outline-0 transition duration-200">
    </div>
    <div class="w-full mt-6">
        <p class="mb-1.5 font-bold">Password</p>
        <input type="password" placeholder="Required" class="w-full px-2 py-1.5 bg-stone-100 border-2 border-black/15 focus-within:border-orange-600 rounded-lg shadow-sm ring-0 focus-within:ring-4 ring-orange-600/20 focus-within:outline-0 transition duration-200">
    </div>
    {{#> button href="{{callback}}" class="w-28 mt-10"}}{{btnText}}{{/button}}
    <p class="mt-8 text-sm text-stone-500">{{> @partial-block }}</p>
    <a href="/" class="mt-1 text-sm font-bold text-orange-600">Go to the homepage</a>
</div>