{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "strict": false,
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "baseUrl": "./",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}